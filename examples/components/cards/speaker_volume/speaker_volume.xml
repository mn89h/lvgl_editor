<component>
	<previews>
		<preview width="320" height="230" />
	</previews>
	<styles>
		<style name="style_panel_light" bg_color="#accent2_light" />
		<style name="style_panel_dark" bg_color="#accent2_dark" />
		<style name="style_disable" opa_layered="60" />
		<style
			name="style_knob"
			pad_all="2"
			border_width="8"
			bg_color="#surface_primary_light"
			border_color="#bg_primary_light"
			shadow_width="4"
			shadow_offset_y="2"
			shadow_opa="20%"
		/>
		<style name="style_knob_dark" bg_color="#surface_primary_dark" border_color="#bg_primary_dark" />
	</styles>
	<view extends="card" style_flex_cross_place="center">
		<style name="style_panel_light" />
		<bind_style subject="dark_theme" name="style_panel_dark" ref_value="1" />

		<card_header title="Speaker Volume">
			<switch bind_checked="speaker" />
		</card_header>

		<row align="center" style_flex_cross_place="center" style_flex_main_place="space_between" width="95%">
			<lv_label
				bind_text="speaker_vol"
				style_text_font="geist_semibold_28"
				style_text_letter_space="-1"
				width="content"
				style_margin_left="2"
				style_margin_right="10"
			>
				<style name="style_disabled" selector="disabled" />
				<bind_state_if_eq subject="speaker" ref_value="0" state="disabled" />
			</lv_label>
			<slider height="20" bind_value="speaker_vol" style_max_width="70%" style_margin_right="11">
				<style name="style_knob" selector="knob" />
				<bind_style subject="dark_theme" ref_value="1" name="style_knob_dark" selector="knob" />
				<style name="style_disable" selector="disabled" />
				<bind_state_if_eq subject="speaker" ref_value="0" state="disabled" />
			</slider>
		</row>
	</view>
</component>
